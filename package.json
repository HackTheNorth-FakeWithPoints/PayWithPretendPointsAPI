{
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "name": "paywithpretendpointsapi",
  "author": "HackTheNorth-FakeWithPoints",
  "description": "Node Version of Points API",
  "license": "AGPL-3.0-only",
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/HackTheNorth-FakeWithPoints/PayWithPretendPointsAPI.git"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --minify",
    "start": "tsup src/index.ts --minify && node ./dist/index.cjs",
    "format": "npx prettier --write . && npx eslint --fix .",
    "swagger": "npx tsx src/swagger/swagger.ts"
  },
  "keywords": [
    "Loyalty and Rewards API",
    "Hack The North",
    "Points API",
    "Hackathon",
    "Points"
  ],
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.14.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.1.0",
    "@types/sequelize": "^4.28.20",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4"
  },
  "overrides": {
    "eslint": "^9.9.0",
    "glob": "^11.0.0",
    "rimraf": "^6.0.1"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
