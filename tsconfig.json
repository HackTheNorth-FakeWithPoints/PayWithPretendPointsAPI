{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public", "docs", "dist", "bruno", ".git", ".github", ".husky", ".vscode"]
}
